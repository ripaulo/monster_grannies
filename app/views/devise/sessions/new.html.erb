<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(https://res.cloudinary.com/monstergrannies/image/upload/v1653511008/Grannies/banner2_lyoots.jpg);">
<h2 class="text-center">LOG IN</h2>

<div class="containernew">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { placeholder: 'email '} %>
      <%= f.input :password,
                required: false,
                input_html: { placeholder: 'current-password'  } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "LOG IN"  %>
    </div>
     <%= render "devise/shared/links" %>
  <% end %>
</div>
</div>
</div>
