
<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(https://res.cloudinary.com/monstergrannies/image/upload/v1653488785/Grannies/funny-grandmother-portraits-2022-02-03-00-17-13-utc_hjozem.jpg);">

 <div class="containernew">
 <h2 class="text-center">SIGN UP</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
  <div>
    <div class="form-inputs">
      <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first name" }%>
      <%= f.input :last_name,
                required: true,
                input_html: { autocomplete: "last name" }%>
      <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
      <%= f.input :photo, as: :file %>
      <%= f.input :birth_date,
                as: :date,
                html5: true,
                required: true,
                input_html: { autocomplete: "00-00-0000" }%>
      <%= f.input :location,
                required: true,
                input_html: { autocomplete: "location" }%>
      <%= f.input :granny,
                as: :select,
                collection: [['Yes', true],['No', false]],
                include_blank: false,
                input_html: { autocomplete: "yes/no" }%>
      <%= f.input :description,
                required: true,
                input_html: { autocomplete: "description" }%>
      <%= f.input :price,
                required: true,
                input_html: { autocomplete: "price" }%>
      <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions" >
      <%= f.button :submit, "Sign up"  %>
    </div>
 <% end %>

 <%= render "devise/shared/links" %>
</div>
</div>
</div>
